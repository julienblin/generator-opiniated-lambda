{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "./dist",
    "module": "commonjs",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@clients/*": ["./src/clients/*"],
      "@config": ["./src/config"],
      "@container": ["./src/handlers/container"],
      "@handlers/*": ["./src/handlers/handlers/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@services/*": ["./src/services/*"],
      "@test/*": ["./test/unit/*"]
    }
  }
}